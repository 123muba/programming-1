//if statement 
#include<iostream>
using namespace std;
int main(){
	int a=15;
	if(a<20){
		cout<<"a is less than 20 "<<endl;
	}
	cout<<"value of a is:"<<a<<endl;
return 0;
}
//if else statement 
#include<iostream>
using namespace std;
int main(){
	int a=15;
	if(a>30){
		cout<<"a is greater than 30 "<<endl;
	}
	else {
		 	cout<<"a is not greater than 30 "<<endl;
	}
		cout<<"value of a is:"<<a<<endl;
return 0;
}
//if else if statement 
#include<iostream>
using namespace std;
int main(){
	int a=50;
	if(a==10){
		cout<<"The value of a is 10"<<endl;
	}
	else if(a==20){
		cout<<"The value of a is 20"<<endl;
	}
		else if(a==30){
			cout<<"The value of a is 30"<<endl;
}
else {
	cout<<"The value of a is not matching"<<endl;
}
cout <<"The exact value a is "<<a<<endl;
return 0;
}
//nested if statement 
#include<iostream>
using namespace std;
int main(){
	int a =2,y=6;
	if (a>=y){
		if ((a,y)==0)//evenly divisible
		{
		if (a==y)
		cout <<"They are the same value:\n";
		else 
		cout <<"They are evebly divisible:\n";
	}
	else 
	cout <<"They are not evebly divisible:\n";
}
else
   cout<<"Hey! The second one is larger!\n";
return 0;
}
