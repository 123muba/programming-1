//arithmetic operation 
#include<iostream>
using namespace std;
int main(){
 int x=20,y=20; 
 int sum,sub,mul,div,rem;
  sum=x+y;
 sub=x-y;
 mul=x*y;
 div=x/y;
 rem=x%y;
 cout<<sum<<endl<<sub<<endl<<mul<<endl<<div<<endl<<rem<<endl;
 return 0;
}
//assignment operation
#include<iostream>
using namespace std;
int main(){
 int x=20,y=2;
 x+=y;
 x-=y;
 x*=y;
 x/=y;
 x%=y;
 cout <<x<<endl<<y<<endl;
}
//logical operation
#include<iostream>
using namespace std;
int main(){
 int M=7,N=8;
 cout<<(M&&N)<<endl;
  cout<<!(M==N)<<endl;
  cout<<(M||N)<<endl;
}
//relational operation 
#include<iostream>
using namespace std;
int main(){
 int M=7,N=8;
 cout<<(M==N)<<endl;
  cout<<(M!=N)<<endl;
  cout<<(M<N)<<endl;
  cout<<(M<=N)<<endl;
  cout<<(M>N)<<endl;
  cout<<(M>=N)<<endl;
}

//c++basic
// c++ single line  comments
/* c++ multi line comments*/ 
#include<iostream>//header file
using namespace std;
#define z 5//c++ constants
int main() //main function
{
 int x;// c++ identifiers
  int y=5;// variable declaration
 cin>>x; //input statements
 cout<<x<<endl<<y<<endl;//output statements
 return 0;// return is  one type of c++ keywords     
}
//bitwise operation
#include<iostream>
using namespace std;
int main(){
 int M=8;
 int N=15;
 int Q;
 Q=M|N;
 cout<<Q<<endl;
 Q=M&N;
 cout<<Q<<endl;
 Q=M^N;
 cout<<Q<<endl; 
 Q=M>>1;
 cout<<Q<<endl;   
 Q=M<<1;
 cout<<Q<<endl;    
}
//increment or decrement operations
#include<iostream>
using namespace std;
int main(){
 int x, a=6,b=9,c=7,d=8;
 x=++a + b++ - c-- * --d;
 cout <<x<<endl;
}
//precendence operations
#include<iostream>
using namespace std;
int main(){
 int a=20;
 int b=15;
 int c=6;
 int f=7;
 int m=30;
 int n=50;
 int d;
 d=(a+b)*c-n/f%m;
 cout<<d<<endl;
}

//simple type conversion 
#include<iostream>
using namespace std;
int main(){
 //Implicity type conversion
 char intToyellow=68;
 int charToyellow='D';
 cout<<intToyellow<<endl<<charToyellow<<endl;
 //explicity type conversion
 int x=5;
 int y=3;
 float z=x/y;
 cout<<z<<endl;
}
